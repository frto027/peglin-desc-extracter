<!doctype html>
<html lang="zh">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>弹珠列表</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="pg_sprite.css">
    <link rel="stylesheet" type="text/css" href="pg_orb_sprite.css">

  </head>
  <body>
    <div class="container">
        <h1>弹珠列表</h1><h5><a href="relic.html">遗物列表</a></h5><div class="badge bg-primary">游戏版本:{{version}}</div>
        <hr>
        
        {{#typed_orbs}}
        <div class="row row-cols-auto">
        {{#orbs}}
            <div class="col col-sm-12 col-md-4">
            <div class="card" style="margin:8px;">
                <div style="text-align:center">
                <div style="width:fit-content;margin:10px auto">
                    <div class="pg_pic_{{sprite}}"></div>
                </div></div>
                <div class="card-body">
                <div style="text-align:center">
                  <h5 class="card-title">{{name}}({{level}})
                      {{#pool}}
                        {{#pool.AvailableOrbs}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">拾取池</span>
                        {{/pool.AvailableOrbs}}
                        {{#pool.Brambles}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">荆棘</span>
                        {{/pool.Brambles}}
                        {{#pool.MirrorbPool}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">镜像池</span>
                        {{/pool.MirrorbPool}}
                        {{#pool.OrborosPool}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">衔尾池</span>
                        {{/pool.OrborosPool}}
                        {{#pool.PotentialLightningScenarioOrbs}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">闪电场景</span>
                        {{/pool.PotentialLightningScenarioOrbs}}
                        {{#pool.Stones}}
                                      <span style="font-size:0.5rem;" class="badge rounded-pill text-bg-secondary">石头</span>
                         {{/pool.Stones}}
                      {{/pool}}
                  </h5>

                  {{#has_tutorial}}
                    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#tutorial_{{name}}_{{level}}" aria-expanded="false" aria-controls="tutorial_{{name}}_{{level}}">
                      教程
                    </button>
                    <div class="collapse" id="tutorial_{{name}}_{{level}}">
                      <div class="alert alert-secondary">
                        {{#tutorial}}
                          {{{desc}}}
                          {{^last}}
                          <hr/>
                          {{/last}}
                        {{/tutorial}}
                      </div>
                    </div>
                    {{/has_tutorial}}
                  <p class="card-text"><div class='pg_sprite pg_sprite_PEG' style="transform:scale(2);margin:3px 10px;"></div>{{dmg}}&nbsp;&nbsp;<div class='pg_sprite pg_sprite_CRIT_PEG' style="transform:scale(2);margin:3px 10px;"></div>{{cdmg}}</p>
                </div>
                <hr/>
                    <ul class="list-group list-group-flush">
                    {{#descs}}
                        <li class="list-group-item"> {{{desc}}} </li>
                    {{/descs}}
                    </ul>
                    {{#has_keywords}}
                        <div class="alert alert-primary">
                        {{#keywords}}
                            {{{keyword_desc}}}
                            {{^last?}}
                              <hr/>
                            {{/last?}}
                        {{/keywords}}
                        </div>
                    {{/has_keywords}}
                   
                </div>
            </div>
            </div>
        {{/orbs}}
        </div>
        {{/typed_orbs}}
    </div>
    <script src="js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>